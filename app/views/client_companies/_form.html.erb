                      <%# @country = ISO3166::Country.countries.sort %>
                      <%# @country.each do |c| %>
                      <!--                          <option value="<%#= c.name %>">-->
                      <%#= c.name %>
                      <!--                          </option>-->
                      <%# end %>
                      <!--                      </select>-->
                    </div>
