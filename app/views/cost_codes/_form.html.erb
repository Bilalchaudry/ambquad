    </div>
  </div>

  <div class="form-row">
    <%= form.label :WBS_05_Description, :class => "mb-1 pt-2 name", :style => 'font-weight:bold' %>
    <div class="value">
      <div class="input-group">
        <%= form.text_field :WBS_05_Description, :class => "form-control py-2", :required => true %>
      </div>
    </div>
  </div>

  <hr>
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-3">
      <div class="form-group mt-3 mb-0">
        <div class="actions">
          <%= form.submit 'Save', :class => 'btn w-100 bg-clr btn-style' %>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div class="form-group mt-3 mb-0">
        <div class="actions">
          <%= link_to "Cancel", project_cost_codes_path, :class => 'btn w-100 bg-clr btn-style' %>
        </div>
      </div>
    </div>
    <div class="col-md-3"></div>
