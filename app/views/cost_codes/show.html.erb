<div id="layoutSidenav">
  <div id="layoutSidenav_content" class="mt-5">
    <div class="page-wrapper p-b-50">
      <div class="wrapper wrapper--w790">
        <div class="card card-5">
          <div class="card-heading bg-clr">
            <h2 class="text-center font-weight-light text-white">
              Cost Code View
            </h2>
          </div>
          <div class="card-body">
            <% if notice.present? %>
              <p id="notice" class="alert-success" style="height: 35px; font-size: 20px; text-align: center; padding-top: 7px;"><%= notice %></p>
            <% end %>

            <div class="form-row">
              <div class="col-md-4">
                <strong>Budget Holder:</strong>
              </div>
              <div class="col-md-6">
                <div>
                  <%= @cost_code.budget_holder.employee.employee_name rescue "N/A" %>
                </div>
              </div>
            </div>

            <div class="form-row">
              <div class="col-md-4">
                <strong>Cost code:</strong>
              </div>
              <div class="col-md-6">
                <div>
                  <%= @cost_code.cost_code_id %>
                </div>
              </div>
            </div>

            <div class="form-row">
              <div class="col-md-4">
                <strong>Cost code description:</strong>
              </div>
              <div class="col-md-6">
                <div>
                  <%= @cost_code.cost_code_description %>
                </div>
              </div>
            </div>

            <div class="form-row">
              <div class="col-md-4">
                <strong>WBS_01:</strong>
              </div>
              <div class="col-md-6">
                <div>
                  <%= @cost_code.WBS_01 rescue "N/A" %>
                </div>
              </div>
            </div>

            <div class="form-row">
              <div class="col-md-4">
                <strong>WBS_01_Description :</strong>
              </div>
