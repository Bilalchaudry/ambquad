              <div class="col-md-3"></div>
              <div class="col-md-3">
                <div class="form-group mt-3 mb-0">
                  <div class="actions">
                    <%= link_to 'Edit', "/projects/#{@project.id}/cost_codes/#{@cost_code.id}/edit", :class => 'btn btn-style w-100 bg-clr btn-style' %>
