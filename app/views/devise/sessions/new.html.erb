<div id="layoutAuthentication" style="background-color: #8ACCB1">
  <div id="layoutAuthentication_content">
    <main>
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-5">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
              <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
              <% flash.each do |name, msg| %>
                <%= content_tag(:div, msg, class: "alert alert-danger") if msg.length > 0 %>
              <% end %>
              <div class="card-body">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class="form-group">
                    <%= f.label :email, class: "small mb-1" %>
                    <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control py-4' %>
                  </div>
                  <div class="form-group">
                    <%= f.label :password, class: "small mb-1" %>
                    <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control py-4' %>
                  </div>
                  <% if devise_mapping.rememberable? %>
                    <div class="form-group">
                      <div class="custom-control custom-checkbox">
                        <%= f.check_box :remember_me, class: 'custom-control-input' %>
                        <%= f.label :remember_me, class: 'custom-control-label' do %>
                          <%= resource.class.human_attribute_name('remember_me') %>
                        <% end %>
                      </div>
                  <% end %>
                  <div class="form-group d-flex align-items-center justify-content-between mt-4 mb-0">
                    <%= render 'devise/shared/links' %>
                    <%= f.submit t('.sign_in'), class: 'btn btn-primary' %>
                  </div>
                <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
  <div id="layoutAuthentication_footer">
    <footer class="py-4 bg-light mt-auto">
      <div class="container-fluid">
        <div class="d-flex align-items-center justify-content-between small">
          <div class="text-muted">Copyright &copy; 2020 Ambquad Solutions Ltd. All Rights Reserved</div>
        </div>
      </div>
    </footer>
  </div>
</div>

