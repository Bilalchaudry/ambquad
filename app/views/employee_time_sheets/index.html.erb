<script>
    // $(document).ready(function() {
    $('#example').DataTable( {
        dom: 'Bfrtip',
        buttons: [
            'csv', 'excel', 'pdf', 'print'
        ]
    } );
    // } );
    $('#datepicker').datepicker({

        uiLibrary: 'bootstrap'
    });

    $('#datepicker').change(function ()
    {
        var celender_date = $("#datepicker").val();
        var formated_date = formatDate(celender_date);

        $.ajax({
            type: "GET",
            url: "/employee_time_sheets",
            data: { date: formated_date , search_date: 'true'}
        })
        // alert(id)
    });

    $('#datepicker1').datepicker({
        uiLibrary: 'bootstrap'
    });

    $('#datepicker1').change(function ()
    {
        var celender_date = $("#datepicker1").val();
        var formated_date = formatDate(celender_date);

        $.ajax({
            type: "GET",
            url: "/employee_time_sheets",
            data: { date: formated_date }
        })
        // alert(id)
    });

    function formatDate(date) {
        var d = new Date(date),
            month = '' + (d.getMonth() + 1),
            day = '' + d.getDate(),
            year = d.getFullYear();

        if (month.length < 2) month = '0' + month;
        if (day.length < 2) day = '0' + day;

        return [year, month, day].join('-');
    }

</script>