<script type="text/javascript">
    // var ac = $('#table').DataTable();
    // var allData = ac.rows().data();
    $(document).on('click', '.cost-bot', function () {
        time_sheet_employee_id = $(this).parent().siblings()[0].textContent;
        total_hours = $(this).parent().siblings()[6].textContent;
        if (total_hours > 0) {
            $("#cost_code_modal").modal();
            $('.js-example-basic-single').select2();
        }
    });

    function add_cost_code() {
        cost_code_id = $('#cost_code').val();
        cost_code = $("#cost_code option:selected").text()
        project_id = <%= params[:project_id] %>
            $.ajax({
                headers: {
                    'X-CSRF-Token': $('meta[name="csrf-token"]').attr('content')
                },
                type: 'POST',
                // url: '/time_sheet_cost_codes',
                url: '/projects/<%= @project.id %>/time_sheet_cost_codes',
                data: {
                    cost_code_id: cost_code_id,
                    cost_code: cost_code,
                    // employee_id: employee_id,
                    project_id: project_id,
                    time_sheet_employee_id: time_sheet_employee_id
                },
                cache: false,
                success: function () {
                    $("#cost_code :selected").remove();
                    $("#cost_code_modal").modal("hide");
                }
            });

    }

    $(document).ready(function () {
        $('#table').DataTable({
            dom: 'Bfrtip',
            buttons: [
                'excelHtml5',
                'csvHtml5',
                'pdfHtml5',
                'print'
            ]
        });
    });
    $('#datepicker_search_bar').datepicker({
        uiLibrary: 'bootstrap'
    });

    $('#datepicker_search_bar').change(function () {
        var celender_date = $("#datepicker_search_bar").val();
        var formated_date = formatDate(celender_date);

        $.ajax({
            type: "GET",
            url: '/projects/<%= @project.id %>/employee_time_sheets',
            data: {date: formated_date, search_date: 'true'}
        })

    });

    $('#datepicker_copy_from_previous').datepicker({
        uiLibrary: 'bootstrap'
    });

    $('#datepicker_copy_from_previous').change(function () {
        var celender_date = $("#datepicker_copy_from_previous").val();
        var formated_date = formatDate(celender_date);

        $.ajax({
            type: "GET",
            url: "/projects/<%= @project.id %>/employee_time_sheets",
            data: {date: formated_date, copy_from_previous: 'true'}
        })
    });

    function formatDate(date) {
        var selected_date = new Date(date),
            month = '' + (selected_date.getMonth() + 1),
            day = '' + selected_date.getDate(),
            year = selected_date.getFullYear();

        if (month.length < 2) month = '0' + month;
        if (day.length < 2) day = '0' + day;

        return [year, month, day].join('-');
    }

    function updateTotalHours(total_hours, data_id) {

        var new_total_hours = prompt("Please Enter Total Hour:", total_hours);

        $.ajax({
            type: "GET",
            url: "/projects/<%= @project.id %>/employee_time_sheets",
            data: {total_hour: new_total_hours, update_total_hour: 'true', data_id: data_id}
        })
    }

    function delete_cost_code(cost_code_id, delete_id, row) {
        row_id = row.id
        if (confirm("Are you sure?")) {
            var link_url = "/projects/<%= @project.id %>/time_sheet_cost_codes/" + delete_id;
            $.ajax({
                headers: {
                    'X-CSRF-Token': $('meta[name="csrf-token"]').attr('content')
                },
                type: "DELETE",
                url: link_url,
                data: {cost_code_id},
                success: function () {
                    $('#'+row_id).addClass("table-dark");
                }
            })
        }
        return false;
    }

</script>