<div id="layoutAuthentication_content">
  <main>
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-7">
          <div class="card shadow-lg border-0 rounded-lg mt-5">
            <div class="card-header"><h3 class="text-center font-weight-light my-4">Create Employee Type</h3></div>
            <div class="card-body">
              <p id="notice"><%= notice %></p>

              <div class="text-center font-weight-light my-4"><h1>Employee Types</h1></div>

              <table>
                <thead>
                <tr>
                  <th>Employee Type:</th>
                  <th colspan="3"></th>
                </tr>
                </thead>
                <tbody>
                <% @employee_types.each do |employee_type| %>
                  <tr>
                    <td><h6><%= employee_type.employee_type %></h6></td>
                    <td><%= link_to 'Show', employee_type %></td>
                    <td><%= link_to 'Edit', edit_employee_type_path(employee_type) %></td>
                    <td><%= link_to 'Destroy', employee_type, method: :delete, data: {confirm: 'Are you sure?'} %></td>
                  </tr>
                <% end %>
                </tbody>
              </table>

              <br>

            <div class="text-center font-weight-light my-4"><%= link_to 'New Employee Type', new_employee_type_path %></div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>
