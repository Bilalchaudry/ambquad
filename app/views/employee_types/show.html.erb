<div id="layoutSidenav">
  <div id="layoutSidenav_content" class="mt-5">
    <div class="page-wrapper p-b-50">
      <div class="wrapper wrapper--w790">
        <div class="card card-5">
          <div class="card-heading bg-clr">
            <h2 class="text-center font-weight-light">
              Employee Type
            </h2>
            <%= render 'shared/client_and_project_info' %>
          </div>
          <div class="card-body">
            <% if notice.present? %>
              <p id="notice" class="alert-success" style="height: 35px; font-size: 20px; text-align: center; padding-top: 7px;"><%= notice %></p>
            <% end %>

            <div class="form-row pt-2">
              <div class="col-md-4">
                <strong>Employee type:</strong>
              </div>
              <div class="col-md-6">
                <div>
                  <%= @employee_type.employee_type %>
                </div>
              </div>
            </div>
            <hr>
            <div class="row">
              <div class="col-md-3"></div>
              <div class="col-md-3">
                <div class="form-group mt-3 mb-0">
                  <div class="actions">
                    <%= link_to 'Edit', edit_project_employee_type_path(@project), :class => 'btn btn-style bg-clr w-100' %>
                  </div>
                </div>
              </div>
              <div class="col-md-3">
                <div class="form-group mt-3 mb-0">
                  <div class="actions">
                    <%= link_to 'Back', project_employee_types_path, :class => 'btn btn-style bg-clr w-100' %>
                  </div>
                </div>
              </div>
              <div class="col-md-3"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>