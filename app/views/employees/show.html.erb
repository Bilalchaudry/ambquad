<div id="layoutSidenav">
  <div id="layoutSidenav_content">
    <% if notice.present? %>
      <p id="notice" class="alert-success notice-style"><%= notice %></p>
    <% end %>
    <div class="form-info-style">
      <%= render 'shared/client_and_project_info' %>
    </div>
    <div class="page-wrapper p-b-50">
      <div class="wrapper wrapper--w790">
        <div class="card card-5 form-border-style">
          <div class="card-heading bg-clr card-text-clr">
            <h4 class="text-center font-weight-light text-white">
              Employee
            </h4>
          </div>
          <div class="card-body">

            <div class="form-row">
              <div class="col-md-4">
                <strong>Employee Name:</strong>
              </div>
              <div class="col-md-6">
                <div>
                  <%= @employee.employee_name %>
                </div>
              </div>
            </div>

            <div class="form-row">
              <div class="col-md-4">
                <strong>Employee ID:</strong>
              </div>
              <div class="col-md-6">
                <div>
                  <%= @employee.employee_id %>
                </div>
              </div>
            </div>

            <div class="form-row">
              <div class="col-md-4">
                <strong>Phone:</strong>
              </div>
              <div class="col-md-6">
                <div>
                  <%= @employee.phone_country_code.to_s + @employee.phone %>
                </div>
              </div>
            </div>

            <div class="form-row">
              <div class="col-md-4">
                <strong>Email:</strong>
              </div>
              <div class="col-md-6">
                <div>
                  <%= @employee.email %>
                </div>
              </div>
            </div>

            <div class="form-row">
              <div class="col-md-4">
                <strong>Gender:</strong>
              </div>
              <div class="col-md-6">
                <div>
                  <%= @employee.gender %>
                </div>
              </div>
            </div>

            <div class="form-row ">
              <div class="col-md-4">
                <strong>Home company role:</strong>
              </div>
              <div class="col-md-6">
                <div>
                  <%= @employee.home_company_role %>
                </div>
              </div>
            </div>


            <div class="form-row">
              <div class="col-md-4">
                <strong>Status:</strong>
              </div>
              <div class="col-md-6">
                <div>
                  <%= @employee.status %>
                </div>
              </div>
            </div>

            <div class="form-row">
              <div class="col-md-4">
                <strong>Project company:</strong>
              </div>
              <div class="col-md-6">
                <div>
                  <%= @employee.project_company.company_name %>
                </div>
              </div>
            </div>

            <hr>
            <div class="row">
              <div class="col-md-3"></div>
              <div class="col-md-3">
                <div class="form-group mt-3 mb-0">
                  <div class="actions">
                    <%= link_to 'Edit', edit_project_employee_path(@project), :class => 'btn btn-style bg-clr w-100' %>
                  </div>
                </div>
              </div>
              <div class="col-md-3">
                <div class="form-group mt-3 mb-0">
                  <div class="actions">
                    <%= link_to 'Back', project_employees_path, :class => 'btn btn-style bg-clr w-100' %>
                  </div>
                </div>
              </div>
              <div class="col-md-3"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  </main>
</div>
