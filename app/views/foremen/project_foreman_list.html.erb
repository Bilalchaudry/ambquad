<div id="layoutSidenav">
  <div id="layoutSidenav_content">
    <main>
      <div class="container-fluid">
        <h1 class="mt-4">Foreman Employees</h1>
        <div class="row">
          <div class="col-xl-4 col-md-6"></div>
          <div class="col-xl-4 col-md-6"></div>
          <div class="col-xl-3 col-md-4"></div>
        </div>

        <div class="card mb-4">
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                <tr>
                  <th>Name</th>
                  <th>Type</th>
                  <th>Foreman</th>
                  <th>Other Manager</th>
                  <th>Total hours</th>
                  <th>Contract start date</th>
                  <th>Contract end date</th>
                </tr>
                </thead>

                <tbody>
                <% @project_employees.each do |project_employee| %>
                  <tr>
                    <td><%= project_employee.employee.employee_name %></td>
                    <td><%= project_employee.employee_type.employee_type %></td>
                    <td><%= project_employee.foreman.employee.employee_name rescue "N/A" %></td>
                    <td><%= project_employee.other_manager.employee.employee_name rescue "N/A" %></td>
                    <td><%= project_employee.total_hours %></td>
                    <td><%= project_employee.contract_start_date %></td>
                    <td><%= project_employee.contract_end_date %></td>
                <% end %>
                </tbody>
              </table>

              <br>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>

<script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js" crossorigin="anonymous"></script>
<script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js" crossorigin="anonymous"></script>


<script>
    $('#dataTable').DataTable();
</script>