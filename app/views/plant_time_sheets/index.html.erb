                <tr>
                  <th>Costcode</th>
                  <th class="plant_sheet_id">Costcode</th>
                  <th>Hrs</th>
                  <th>Costcode</th>
                  <th class="plant_sheet_id">Costcode</th>
                  <th>Hrs</th>
                  <th>Costcode</th>
                  <th class="plant_sheet_id">Costcode</th>
                  <th>Hrs</th>
                  <th>Costcode</th>
                  <th class="plant_sheet_id">Costcode</th>
                  <th>Hrs</th>
                  <th>Costcode</th>
                  <th class="plant_sheet_id">Costcode</th>
                  <th>Hrs</th>
                </tr>
                </tr>
                </thead>

                <tbody>
                <%= render 'plant_time_sheet_table_data' %>
                </tbody>
              </table>

              <br>
              <div class="row">
                <div class="col-md-3">
                  <div class="form-group mt-3 mb-0">
                    <div class="actions">
                      <button id="datepicker_copy_from_previous" class='btn btn-dark w-100' style='font-weight:bold; color: white;'>Copy from Previous Timesheet</button>
                    </div>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="form-group mt-3 mb-0">
                    <div class="actions">
                      <%= link_to 'Save Progress', "/projects/#{@project.id}/plant_time_sheets", :class => 'btn btn-dark w-100', :style => 'font-weight:bold; color: white;' %>
                    </div>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="form-group mt-3 mb-0">
                    <div class="actions">
                      <%= link_to 'Update Timesheets', "/projects/#{@project.id}/plant_time_sheets", :class => 'btn btn-dark w-100', :style => 'font-weight:bold; color: white;' %>
                    </div>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="form-group mt-3 mb-0">
                    <div class="actions">
                      <button class='btn btn-dark w-100' style='font-weight:bold; color: white;' onclick="submit_time_sheet()">Submit Timesheets</button>
                    </div>
                  </div>
                </div>
              </div>
              <%#= link_to 'New Plant Time Sheet', new_plant_time_sheet_path %>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>
