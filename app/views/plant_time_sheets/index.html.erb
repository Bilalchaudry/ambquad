<script>
    function cost_modal_plant(plant, plant_sheet_id) {
        debugger
        plant_id = plant
        time_sheet_plant_id = plant_sheet_id
        $.ajax({
            type: "GET",
            url: "/projects/<%= @project.id %>/employee_time_sheets",
            data: {plant_id, time_sheet_plant_id, find_plant_codes: plant_id},
            success: function (data) {
                console.log(data);
                $("#cost_code").empty()
                var select = document.getElementById("cost_code");
                $(select).append("<option disabled selected value>-- Select Cost Code -- </option>")
                for (i = 0; i < data.length; i++) {
                    $(select).append("<option value="+data[i].id+">"+data[i].cost_code_id+"</option>")
                }
                $("#cost_code_modal").modal();
                $('.js-example-basic-single').select2();
            }
        })
    }
    function add_cost_code() {
        cost_code_id = $('#cost_code').val();
        cost_code = $("#cost_code option:selected").text()
        project_id = <%= params[:project_id] %>
            $.ajax({
                headers: {
                    'X-CSRF-Token': $('meta[name="csrf-token"]').attr('content')
                },
                type: 'POST',
                url: '/projects/<%= @project.id %>/time_sheet_cost_codes',
                data: {cost_code_id: cost_code_id, cost_code: cost_code, plant_id: plant_id, project_id: project_id, time_sheet_plant_id: time_sheet_plant_id},
                cache: false,
                success: function (data) {
                    $("#cost_code_modal").modal("hide");
                }
            });

    }
    $(document).ready(function () {
        $('#table').DataTable({
            dom: 'Bfrtip',
            buttons: [
                {
                    extend: 'csvHtml5',
                    exportOptions: {
                        columns: [1,2,3,4,5,6,7,9,10,12,13,15,16,18,19,21,22 ]
                    }
                },
                {
                    extend: 'excelHtml5',
                    exportOptions: {
                        columns: [1,2,3,4,5,6,7,9,10,12,13,15,16,18,19,21,22 ]
                    }
                },
                {
                    extend: 'pdfHtml5',
                    orientation: 'landscape',
                    exportOptions: {
                        columns: [1,2,3,4,5,6,7,9,10,12,13,15,16,18,19,21,22 ]
                    }
                },
                {
                    extend: 'print',
                    exportOptions: {
                        columns: [1,2,3,4,5,6,7,9,10,12,13,15,16,18,19,21,22 ]
                    }
                }
            ]
        });
    });

    $('#datepicker_search_bar').datepicker({
        uiLibrary: 'bootstrap'
    });

    $('#datepicker_search_bar').change(function ()
    {
        var celender_date = $("#datepicker_search_bar").val();
        var formated_date = formatDate(celender_date);

        $.ajax({
            type: "GET",
            url: '/projects/<%= @project.id %>/plant_time_sheets',
            data: { date: formated_date , search_date: 'true' }
        })

    });

    $('#datepicker_copy_from_previous').datepicker({
        uiLibrary: 'bootstrap'
    });

    $('#datepicker_copy_from_previous').change(function ()
    {
        var celender_date = $("#datepicker_copy_from_previous").val();
        var formated_date = formatDate(celender_date);

        $.ajax({
            type: "GET",
            url: "/projects/<%= @project.id %>/plant_time_sheets",
            data: { date: formated_date , copy_from_previous: 'true' }
        })
    });

    function formatDate(date) {
        var selected_date = new Date(date),
            month = '' + (selected_date.getMonth() + 1),
            day = '' + selected_date.getDate(),
            year = selected_date.getFullYear();

        if (month.length < 2) month = '0' + month;
        if (day.length < 2) day = '0' + day;

        return [year, month, day].join('-');
    }

    function updateTotalHours(total_hours, data_id) {

        var new_total_hours = prompt("Please Enter Total Hour:", total_hours);

        $.ajax({
            type: "GET",
            url: "/projects/<%= @project.id %>/plant_time_sheets",
            data: { total_hour: new_total_hours , update_total_hour: 'true', data_id: data_id }
        })
    }

    function delete_cost_code_plant(cost_code_id, delete_id,row, plant_timesheet_date) {
        row_id = row.id
        if (confirm("Are you sure?")) {
        var link_url =  "/projects/<%= @project.id %>/time_sheet_cost_codes/" + delete_id;
        $.ajax({
            headers: {
                'X-CSRF-Token': $('meta[name="csrf-token"]').attr('content')
            },
            type: "DELETE",
            url: link_url,
            data: {delete_id,plant_timesheet_date},
            success: function () {
                $('#'+row_id).addClass("table-dark");
            }
        })
    }
        return false;
    }

    function submit_time_sheet() {
        var sheet_date = null;
        var celender_date = $("#datepicker_search_bar").val();
        if(celender_date == "")
        {
            sheet_date = formatDate(new Date())
        }
        else
        {
            sheet_date = new Date(celender_date);
        }

        $.ajax({
            type: "GET",
            url: "/projects/<%= @project.id %>/plant_time_sheets",
            data: {submit_time_sheet: true, sheet_date: sheet_date }
        })
    }
</script>