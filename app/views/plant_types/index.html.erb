<div id="layoutSidenav">
  <div id="layoutSidenav_content">
    <main>
      <div class="container-fluid">
        <h1 class="mt-4">Plant Types</h1>
        <div class="row">
          <div class="col-xl-4 col-md-6"></div>
          <div class="col-xl-4 col-md-6"></div>
          <div class="col-xl-3 col-md-4">
            <div class="card bg-success text-white mb-3">
              <%= link_to "Add New Plant Type", new_plant_type_path, :class => "btn btn-dark", style: "color: white" %>
            </div>
          </div>
        </div>
        <div class="card mb-4">
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                <tr>
                  <th>Plant Types</th>
                  <th>Actions</th>
                </tr>
                </thead>

                <tbody>
                <% @plant_types.each do |plant_type| %>
                  <tr>
                    <td><%= plant_type.type_name%></td>
                    <td>
                      <%= link_to "View", plant_type_path(plant_type), :class => "btn btn-outline-dark" %>
                      <%= link_to "Edit", edit_plant_type_path(plant_type), :class => "btn btn-outline-info" %>
                      <%= link_to "Delete", plant_type_path(plant_type), :class => "btn btn-outline-danger", method: :delete %>
                    </td>
                  </tr>
                <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>


<script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js" crossorigin="anonymous"></script>
<script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js" crossorigin="anonymous"></script>

<script>
    $('#dataTable').DataTable();
</script>