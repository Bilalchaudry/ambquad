<div id="layoutAuthentication_content">
  <main>
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-7">
          <div class="card shadow-lg border-0 rounded-lg mt-5">
            <div class="card-header"><h3 class="text-center font-weight-light my-4">Create Plant Type</h3></div>
            <div class="card-body">

              <p id="notice"><%= notice %></p>

              <div class="text-center font-weight-light my-4">
              <p>
                <h3><strong>Type name:</strong>
                  <%= @plant_type.type_name %></h3>
              </p>

              <%= link_to 'Edit', edit_plant_type_path(@plant_type) %> |
              <%= link_to 'Back', plant_types_path %>
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>