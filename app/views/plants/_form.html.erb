<div id="layoutAuthentication_content">
  <main>
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-7">
          <div class="card shadow-lg border-0 rounded-lg mt-5">
            <div class="card-body">
              <%= form_with(model: plant, local: true) do |form| %>
                <%= render 'layouts/error_messages', object: form.object %>
                <div class="form-row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= form.label :plant_name, :class => "small mb-1" %>
                      <%= form.text_field :plant_name, :class => "form-control py-2", :required => true %>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= form.label :plant_id, :class => "small mb-1" %>
                      <%= form.text_field :plant_id, validate: true, :class => "form-control py-2", :required => true %>
                    </div>
                  </div>
                </div>

                <div class="form-row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= form.label :contract_start_date, :class => "small mb-1" %>
                      <%= form.date_field :contract_start_date, :class => "form-control py-2", :required => true %>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= form.label :contract_end_date, :class => "small mb-1" %>
                      <%= form.password_field :contract_end_date, validate: true, :class => "form-control py-2", :required => true %>
                    </div>
                  </div>
                </div>

                <div class="form-row">
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= form.label :plant_type, :class => "small mb-1" %>
                      <select name="plant[plant_type_id]" id="plant_type_id" class="form-control">
                        <% PlantType.all.each do |type| %>
                          <option value="<%= type.id %>">
                            <%= type.type_name %>
                          </option>
                        <% end %>
                      </select>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= form.label :market_value, :class => "small mb-1" %>
                      <%= form.text_field :market_value, validate: true, :class => "form-control py-2", :required => true %>
                    </div>
                  </div>
                </div>


                <div class="form-group mt-4 mb-0">
                  <div class="actions">
                    <%= form.submit %>
                  </div>
                </div>


              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>