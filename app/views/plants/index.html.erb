<div id="layoutSidenav">
  <div id="layoutSidenav_content">
    <main>
      <div class="container-fluid">
        <h1 class="mt-4">Plants</h1>
        <div class="row">
          <div class="col-xl-4 col-md-6"></div>
          <div class="col-xl-4 col-md-6"></div>
          <div class="col-xl-3 col-md-4">
            <div class="card bg-success text-white mb-3">
              <%= link_to "Add New Plant", new_plant_path, :class => "btn btn-dark", style: "color: white" %>
            </div>
          </div>

        </div>

        <div class="card mb-4">
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                <tr>
                  <th>Plant Name</th>
                  <th>Plant ID</th>
                  <th>Plant Type</th>
                  <th>Contract Start Date</th>
                  <th>Contract End Date</th>
                  <th>Market Value</th>
                  <th>Actions</th>
                </tr>
                </thead>

                <tbody>
                <% @plants.each do |plant| %>
                  <tr>
                    <td><%= plant.plant_name%></td>
                    <td><%= plant.plant_id %></td>
                    <td><%= plant.plant_type_id %></td>
                    <td><%= plant.contract_start_date %></td>
                    <td><%= plant.contract_end_date %></td>
                    <td><%= plant.market_value %></td>
                    <td>
                      <%= link_to "View", plant_path(plant), :class => "btn btn-outline-dark" %>
                      <%= link_to "Edit", edit_plant_path(plant), :class => "btn btn-outline-info" %>
                      <%= link_to "Delete", plant_path(plant), :class => "btn btn-outline-danger", method: :delete %>
                    </td>
                  </tr>
                <% end %>

                </tbody>
              </table>
            </div>
          </div>
        </div>

      </div>
    </main>
    <footer class="py-4 bg-light mt-auto">
      <div class="container-fluid">
        <div class="d-flex align-items-center justify-content-between small">
          <div class="text-muted">Copyright &copy; Your Website 2019</div>
          <div>
            <a href="#">Privacy Policy</a>
            &middot;
            <a href="#">Terms &amp; Conditions</a>
          </div>
        </div>
      </div>
    </footer>
  </div>
</div>


<script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js" crossorigin="anonymous"></script>
<script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js" crossorigin="anonymous"></script>

<script>
    $('#dataTable').DataTable();
</script>