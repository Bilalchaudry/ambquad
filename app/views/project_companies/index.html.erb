<div id="layoutSidenav">
  <div id="layoutSidenav_content">
    <main>
      <div class="container-fluid">
        <h1 class="mt-4">Project Companies</h1>
        <div class="row">
          <div class="col-xl-4 col-md-6"></div>
          <div class="col-xl-4 col-md-6"></div>
          <div class="col-xl-3 col-md-4">
            <div class="card bg-success text-white mb-3">
              <%= link_to 'New Project Company', new_project_company_path, :class => "btn btn-dark", style: "color: white" %>
            </div>
          </div>
        </div>
        <div class="card mb-4">
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                <tr>
                  <th>Company Name</th>
                  <th>Company summary</th>
                  <th>Project role</th>
                  <th>Address</th>
                  <th>Phone</th>
                  <th>Primary poc first name</th>
                  <th>Primary poc last name</th>
                  <th>Poc email</th>
                  <th>Poc phone</th>
                  <th>Client company</th>
                  <th>Project</th>
                  <th>Actions</th>
                </tr>
                </thead>

                <tbody>
                <% @project_companies.each do |project_company| %>
                  <tr>
                    <td><%= project_company.company_name %></td>
                    <td><%= project_company.company_summary %></td>
                    <td><%= project_company.project_role %></td>
                    <td><%= project_company.address %></td>
                    <td><%= project_company.phone %></td>
                    <td><%= project_company.primary_poc_first_name %></td>
                    <td><%= project_company.primary_poc_last_name %></td>
                    <td><%= project_company.poc_email %></td>
                    <td><%= project_company.poc_phone %></td>
                    <td><%= project_company.client_company.company_name %></td>
                    <td><%= project_company.project.project_name %></td>
                    <td><%= link_to 'Show', project_company, :class => "btn btn-outline-dark" %>
                      <%= link_to 'Edit', edit_project_company_path(project_company), :class => "btn btn-outline-info" %>
                      <%= link_to 'Destroy', project_company, method: :delete, data: {confirm: 'Are you sure?'}, :class => "btn btn-outline-danger" %></td>
                  </tr>
                <% end %>
                </tbody>
              </table>

              <br>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>

<script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js" crossorigin="anonymous"></script>
<script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js" crossorigin="anonymous"></script>

<script>
    $('#dataTable').DataTable();
</script>