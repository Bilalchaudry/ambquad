<div id="layoutSidenav">
  <div id="layoutSidenav_content">
    <main>
      <% if notice.present? %>
        <p id="notice" class="alert-success notice-style"><%= notice %></p>
      <% end %>
      <div class="form-info-style">
        <%= render 'shared/client_and_project_info' %>
      </div>
      <div class="container-fluid">
      <div class="row pt-3">
        <div class="col-xl-6 col-md-6"></div>

        <div class="col-xl-3 col-md-3">
          <div class="card bg-success text-white mb-3">
            <%= link_to 'Back to Project Setup', project_path(@project), :class => "btn btn-dark", style: "color: white" %>
          </div>
        </div>

        <div class="col-xl-3 col-md-3">
          <div class="card bg-success text-white mb-3">
            <%= link_to 'Add Project Employee', new_project_project_employee_path, :class => "btn btn-dark", style: "color: white" %>
          </div>
        </div>

      </div>

      <div class="card mb-4">
        <div class="card-header"><i class="fas fa-table mr-1"></i>Project Employees</div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
              <thead>
              <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Foreman</th>
                <th>Other Manager</th>
                <th>Project Company</th>
                <th>Total hours</th>
                <th>Contract start date</th>
                <th>Contract end date</th>
                <th>Actions</th>
              </tr>
              </thead>

              <tbody>
              <% @project_employees.each do |project_employee| %>
                <tr>
                  <td><%= project_employee.employee.employee_name %></td>
                  <td><%= project_employee.employee_type.employee_type %></td>
                  <td><%= project_employee.foreman.employee.employee_name rescue "N/A" %></td>
                  <td><%= project_employee.other_manager.employee.employee_name rescue "N/A" %></td>
                  <td><%= project_employee.project_company.company_name rescue "N/A" %></td>
                  <td><%= project_employee.total_hours %></td>
                  <td><%= project_employee.contract_start_date %></td>
                  <td><%= project_employee.contract_end_date %></td>
                  <td><%= link_to 'View', "/projects/#{@project.id}/project_employees/#{project_employee.id}", :class => "btn btn-outline-dark" %>
                    <%= link_to 'Edit', "/projects/#{@project.id}/project_employees/#{project_employee.id}/edit", :class => "btn btn-outline-info" %>
                    <%= link_to 'Destroy', "/projects/#{@project.id}/project_employees/#{project_employee.id}" + "?delete=true", method: :delete, data: {confirm: 'Are you sure?'}, :class => "btn btn-outline-danger" %></td>
                </tr>
              <% end %>
              </tbody>
            </table>

            <br>
          </div>
        </div>
      </div>
      </div>
    </main>
  </div>
</div>

<script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js" crossorigin="anonymous"></script>
<script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js" crossorigin="anonymous"></script>


<script>
    $('#dataTable').DataTable();
</script>