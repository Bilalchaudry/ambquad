<!--<p id="notice"><%#= notice %></p>-->
<div id="layoutAuthentication_content">
  <main>
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-7">
          <div class="card shadow-lg border-0 rounded-lg mt-5">
            <div class="card-header"><h3 class="text-center font-weight-light my-4">Project Employee</h3></div>
            <div class="card-body">

              <div class="form-row pt-2">
                <div class="col-md-4">
                  <strong>Employee:</strong>
                </div>
                <div class="col-md-6">
                  <div>
                    <%= "#{@project_employee.employee.first_name} #{@project_employee.employee.last_name}" %>
                  </div>
                </div>
              </div>

              <div class="form-row pt-2">
                <div class="col-md-4">
                  <strong>Employee type:</strong>
                </div>
                <div class="col-md-6">
                  <div>
                    <%= @project_employee.employee_type.employee_type %>
                  </div>
                </div>
              </div>

              <div class="form-row pt-2">
                <div class="col-md-4">
                  <strong>Project:</strong>
                </div>
                <div class="col-md-6">
                  <div>
                    <%= Project.find_by_id(@project_employee.project_id).project_name rescue "N/A"%>
                  </div>
                </div>
              </div>

              <div class="form-row pt-2">
                <div class="col-md-4">
                  <strong>Total hours:</strong>
                </div>
                <div class="col-md-6">
                  <div>
                    <%= @project_employee.total_hours %>
                  </div>
                </div>
              </div>

              <div class="form-row pt-2">
                <div class="col-md-4">
                  <strong>Contract start date:</strong>
                </div>
                <div class="col-md-6">
                  <div>
                    <%= @project_employee.contract_start_date %>
                  </div>
                </div>
              </div>

              <div class="form-row pt-2">
                <div class="col-md-4">
                  <strong>Contract end date:</strong>
                </div>
                <div class="col-md-6">
                  <div>
                    <%= @project_employee.contract_end_date %>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-3">
                  <div class="form-group mt-3 mb-0">
                    <div class="actions">
                      <%= link_to 'Edit', "/projects/#{@project.id}/project_employees/#{@project_employee.id}/edit", :class => 'btn btn-dark w-100', :style => 'font-weight:bold; color: white;' %>
                    </div>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="form-group mt-3 mb-0">
                    <div class="actions">
                      <%= link_to 'Back', project_project_employees_path, :class => 'btn btn-dark w-100', :style => 'font-weight:bold; color: white;' %>
                    </div>
                  </div>
                </div>
                <div class="col-md-3"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>