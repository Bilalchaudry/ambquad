<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
  <thead>
  <tr>
    <th>Email</th>
    <th>Name</th>
    <th>Phone Number</th>
    <th>Address</th>
    <th>Users</th>
    <th>Start date</th>
    <th>Actions</th>
  </tr>
  </thead>

  <tbody>
  <% Company.all.each do |company| %>
    <tr>
      <td><%= company.email %></td>
      <td><%= company.name %></td>
      <td><%= company.phone_number %></td>
      <td><%= company.address %></td>
      <td><%= company.number_of_users %></td>
      <td><%= company.start_date %></td>
      <td>
        <%= link_to "View", company_path(company), :class => "btn btn-outline-success" %>
        <%= link_to "Edit", edit_company_path(company), :class => "btn btn-outline-info" %>
        <%= link_to "Delete", company_path(company), :class => "btn btn-outline-danger", method: :delete %>
      </td>
    </tr>
  <% end %>

  </tbody>
</table>
