<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
  <thead>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Role</th>
    <th>Actions</th>
  </tr>
  </thead>

  <tbody>
  <% User.all.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.email %></td>
      <td><%= user.role%></td>
      <td>
        <%= link_to "View", user_path(user), :class => "btn btn-outline-dark" %>
        <%= link_to "Edit", edit_user_path(user), :class => "btn btn-outline-info" %>
        <%= link_to "Delete", user_path(user), :class => "btn btn-outline-danger", method: :delete %>
      </td>
    </tr>
  <% end %>

  </tbody>
</table>