<div id="layoutAuthentication_content">
  <main>
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-7">
          <div class="card shadow-lg border-0 rounded-lg mt-5">
            <div class="card-header"><h3 class="text-center font-weight-light my-4"><%= @user.first_name %></h3></div>
            <div class="card-body">
              <% if notice.present? %>
                <p id="notice" class="alert-success" style="height: 35px; font-size: 20px; text-align: center; padding-top: 7px;"><%= notice %></p>
              <%end %>

              <div class="form-row pt-2">
                <div class="col-md-3">
                  <strong>First Name:</strong>
                </div>
                <div class="col-md-6">
                  <div>
                    <%= @user.first_name %>
                  </div>
                </div>
              </div>


              <div class="form-row pt-2">
                <div class="col-md-3">
                  <strong>Last Name:</strong>
                </div>
                <div class="col-md-6">
                  <div>
                    <%= @user.last_name %>
                  </div>
                </div>
              </div>

              <div class="form-row pt-2">
                <div class="col-md-3">
                  <strong>Phone:</strong>
                </div>
                <div class="col-md-6">
                  <div>
                    <%= @user.phone_no %>
                  </div>
                </div>
              </div>


              <div class="form-row pt-2">
                <div class="col-md-3">
                  <strong>Email:</strong>
                </div>
                <div class="col-md-6">
                  <div>
                    <%= @user.email %>
                  </div>
                </div>
              </div>

              <div class="form-row pt-2">
                <div class="col-md-3">
                  <strong>Username:</strong>
                </div>
                <div class="col-md-6">
                  <div>
                    <%= @user.username %>
                  </div>
                </div>
              </div>

              <div class="form-row pt-2">
                <div class="col-md-3">
                  <strong>Role:</strong>
                </div>
                <div class="col-md-6">
                  <div>
                    <%= @user.role %>
                  </div>
                </div>
              </div>

              <div class="form-row pt-2">
                <div class="col-md-3">
                  <strong>Company:</strong>
                </div>
                <div class="col-md-6">
                  <div>
                    <%#= @user.client_company.company_name %>
                  </div>
                </div>
              </div>

              <div class="row">
                <div class="col-md-3"></div>
                <div class="col-md-4">
                  <div class="form-group mt-3 mb-0">
                    <div class="actions">
                      <%= link_to 'Edit', edit_user_path(@user), :class => 'btn btn-dark w-100', :style => 'font-weight:bold; color: white;' %>
                    </div>
                  </div>
                </div>
                <div class="col-md-3">
                  <div class="form-group mt-3 mb-0">
                    <div class="actions">
                      <%= link_to 'Back', users_path, :class => 'btn btn-dark w-100', :style => 'font-weight:bold; color: white;' %>
                    </div>
                  </div>
                </div>
                <div class="col-md-3"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>
